<chart [{$labelDisplay}] palette='1' caption='[{$caption}]' xAxisName='[{$xAxisName}]' yAxisName='[{$yAxisName}]' shownames='1' showvalues='0' showSum='1' decimals='0' overlapBars='0' showShadow='1'>
<categories>
[{section name=i loop=$categories}]
<category label='[{$categories[i]}]'/>
[{/section}]
</categories>
[{section name=i loop=$datasets}]
<dataset seriesName='[{$datasets[i].seriesName}]' showValues='1'>
[{section name=j loop=$datasets[i].datas}]
<set value='[{$datasets[i].datas[j]}]' />
[{/section}]
</dataset>
[{/section}]
</chart>